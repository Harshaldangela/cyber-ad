{
  "manifest_version": 3,
  "name": "Cyber Ad Generator for Gmail",
  "version": "0.1.0",
  "description": "Adds a button in Gmail to generate cyber awareness ads from email content.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://mail.google.com/*",
    "http://localhost:8000/*",
    "https://*/"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; base-uri 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cyber Ad Generator"
  }
}
